{
    "version": "1.0",
    "documentation": {
        "directory_structure": {
            "root": "/docs",
            "categories": {
                "pattern": "${category}/index.md",
                "endpoints": "${category}/${endpoint}.md"
            }
        },
        "endpoint_template": {
            "required_sections": [
                "# ${Endpoint Name}",
                "## Query Parameters",
                "## Response",
                "## Example Request",
                "## Response Fields",
                "## Notes"
            ],
            "parameter_table_format": [
                "| Parameter | Type | Required | Description | Default |",
                "|-----------|------|----------|-------------|---------|"
            ],
            "response_field_table_format": [
                "| Field | Description |",
                "|-------|-------------|"
            ]
        },
        "formatting": {
            "code_blocks": {
                "url": "```\nGET https://api.taostats.io/api/${path}\n```",
                "json": "```json",
                "python": "```python"
            },
            "timestamps": "ISO 8601",
            "numbers": "string format for precision",
            "pagination": {
                "default_limit": 50,
                "format": "current_page, per_page, total_items, total_pages, next_page, prev_page"
            }
        },
        "required_examples": {
            "request": {
                "python": {
                    "imports": ["requests"],
                    "headers": {
                        "accept": "application/json",
                        "Authorization": "YOUR-API-KEY"
                    }
                }
            },
            "response": {
                "format": "json",
                "include_pagination": true
            }
        }
    },
    "contributing_rules": {
        "process": [
            "1. Capture API Documentation",
            "2. Test the API Endpoint",
            "3. Document Using Cursor + Claude",
            "4. Review and Commit"
        ],
        "documentation_standards": {
            "consistency": "Follow existing documentation format",
            "completeness": "Include all parameters and response fields",
            "examples": "Provide clear, working example requests",
            "clarity": "Use tables for parameters and field descriptions",
            "structure": "Maintain established directory organization"
        },
        "image_rules": {
            "directory": "images",
            "required_sections": [
                "parameters section",
                "response structure (may require multiple screenshots)"
            ],
            "description": "Only capture the parameter section and response structure sections from the documentation page. The assistant will recognize the content of each screenshot."
        }
    },
    "workflow": {
        "trigger": {
            "phrase": "document endpoint",
            "description": "Start the documentation process for the next endpoint",
            "response": "Hello! I'll help you document the next API endpoint. Let me check the progress checklist and guide you through the process.",
            "alternate_phrases": [
                "start documentation",
                "document next endpoint",
                "begin documentation"
            ]
        },
        "agent_mode": {
            "required": true,
            "initial_actions": [
                "Introduce self and purpose",
                "Check CONTRIBUTING.md checklist",
                "Identify if documenting new category or existing category",
                "Begin structured collection process"
            ],
            "collection_sequence": [
                {
                    "step": 1,
                    "action": "Request parameter documentation",
                    "prompt": {
                        "new_category": "Please take a screenshot of just the parameters section and paste it here",
                        "existing_category": "Please take a screenshot of just the parameters section and paste it here"
                    },
                    "expected": "Screenshot containing parameter table or list"
                },
                {
                    "step": 2,
                    "action": "Request response structure",
                    "prompt": {
                        "new_category": "Please take screenshots of the response structure section (this usually requires 2 screenshots to capture all fields) and paste them here",
                        "existing_category": "Please take screenshots of the response structure section (this usually requires 2 screenshots to capture all fields) and paste them here"
                    },
                    "expected": "Screenshots containing response structure and fields"
                },
                {
                    "step": 3,
                    "action": "Request API test",
                    "prompt": "Please share the complete API request code you used to test this endpoint",
                    "expected": "Python code block with URL and headers"
                },
                {
                    "step": 4,
                    "action": "Request response example",
                    "prompt": "Please share the API response you received",
                    "expected": "JSON response with all fields"
                }
            ],
            "verification_steps": [
                "Confirm all required sections are captured in screenshots",
                "Verify screenshots show complete parameter and response information",
                "Check request includes all required headers",
                "Verify response contains required fields"
            ],
            "documentation_steps": [
                "Create/update endpoint documentation",
                "Update checklist in CONTRIBUTING.md",
                "Confirm changes with user",
                "Suggest next endpoint to document"
            ],
            "next_endpoint_prompt": {
                "template": "For the ${endpoint_name} endpoint, I'll need:\n1. Screenshot of the parameters section from the official docs\n2. Screenshot(s) of the response structure section\n3. A test API request\n4. The response from your test request\n\nPlease provide these materials when ready."
            }
        },
        "checklist_management": {
            "file": "CONTRIBUTING.md",
            "section": "## Documentation Progress",
            "actions": [
                "Check current progress in checklist",
                "Identify next undocumented endpoint",
                "Request required documentation materials",
                "Update checklist after completion"
            ]
        },
        "required_input_format": {
            "images": {
                "required_content": [
                    "Parameter section screenshot showing complete parameter table",
                    "Response structure screenshots showing all response fields"
                ],
                "required_count": {
                    "parameters": 1,
                    "response": "1-2 depending on length"
                },
                "description": "Screenshots should clearly show the complete sections without cutting off content"
            },
            "request_example": {
                "format": "text",
                "content": "Complete API request code including URL and headers"
            },
            "response_example": {
                "format": "text",
                "content": "Complete API response in JSON format"
            }
        }
    },
    "links": {
        "official_docs": "https://docs.taostats.io/reference/welcome-to-the-taostats-api",
        "examples": "https://github.com/taostats/examples",
        "api_status": "https://api.taostats.io/status"
    }
} 